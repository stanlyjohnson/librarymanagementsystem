<div class="row">
	<div class="row mx-auto">
		<h1 style="font-weight:bold;">Listing Students</h1>
	</div>
</div>

<div class="row">
	<div class="row mx-auto"> 
		<table class="table table-striped table-hover">
		  <thead>
		    <tr>
		      <th scope="col">Name</th>
		      <th scope="col">Section</th>
		      <th scope="col">Assigned Book(ID)</th>
		      <th scope="col">Issue date</th>
		      <th scope="col">Days remaining</th>
		      <th scope="col">Assign book</th>
		      <th scope="col">Delete</th>
		      <th scope="col">More Details</th>	

		    </tr>
		  </thead>
		  <% @kids.each do |kid| %>
		    <tr>
		      <td><%= kid.studentname %></td>
		      <td><%= kid.section %></td>
		      <td><%= kid.bookid %></td>
		      <td><% if !(kid.bookid.blank?)%><%=kid.updated_at.strftime("%m/%d/%y")%><%end%></td>
		      <td><% if !(kid.bookid.blank?)%><%=(((kid.updated_at+10.days)-(Time.now))/86400).round%> <% end %></td>
		      <td><%= link_to 'Assign', edit_kid_path(kid) %></td>
		      <td><%= link_to 'Delete', kid_path(kid),
			      method: :delete,
			      data: { confirm: 'Are you sure?' } %></td>
		      <td><%= link_to 'More Details', kid_path(kid) %></td>
		    </tr>
		  <% end %>
		</table>
	</div>
</div>

<div class="row">
	<div class="row mx-auto">
		<h3 style="font-weight:bold;"><%= link_to 'Add New student', new_kid_path %></h3>
	</div>
</div>
