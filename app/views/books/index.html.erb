<div class="row">
	<div class="row mx-auto">
		<h1 style="font-weight:bold;">Listing Books</h1>
	</div>
</div> 
<div class="row">
	<div class="row mx-auto">
		<table class="table table-striped table-hover">
		  <thead>
		    <tr>
		      <th scope="col">Title</th>
		      <th scope="col">Author</th>
		      <th scope="col">Edit</th>
		      <th scope="col">Delete</th>
		      <th scope="col">More Details</th>	

		    </tr>
		  </thead>
		  <% @books.each do |book| %>
		    <tr>
		      <td><%= book.title %></td>
		      <td><%= book.author %></td>

			     <td><%= link_to 'Edit', edit_book_path(book) %></td>
			     <td><%= link_to 'Delete', book_path(book),
			      method: :delete,
			      data: { confirm: 'Are you sure?' } %></td>
		      <td><%= link_to 'More Details', book_path(book) %></td>
		    </tr>
		  <% end %>
		</table>
	</div>
</div>

<div class="row">
	<div class="row mx-auto">
		<h3 style="font-weight:bold;">	<%= link_to 'Add new book', new_book_path %></h3>
	</div>
</div>
